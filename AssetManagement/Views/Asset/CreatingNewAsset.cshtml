@using AssetManagement.Models.Account
@section scripts {
    <script type="text/javascript" src="~/Scripts/Customs/create-new-asset.js"></script>
}
@model AssetManagement.Models.ViewModel.CreatNewAssetViewModel
@{
    var profileData = this.Session["UserProfile"] as UserProfileSessionData;
    var userRole = profileData.UserRole;
    var userId = profileData.UserId;
}
<div class="portlet light ">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject font-green bold uppercase">Add New Asset</span>
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        @using (Ajax.BeginForm("CreateNewAsset", "Home", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", OnFailure = "OnFailure" }, new { @id = "newAssetForm", @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(x => x.CreatedBy, new { Value = userId })
            <div class="form-body">
                <h3 class="form-section">General</h3>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Asset Name</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(x => x.AssetName, new { @class = "form-control", placeholder = "Please fill in the asset name" })
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Asset Category</label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(x => x.AssetSubCategoryId, Enumerable.Empty<SelectListItem>(), new { @class = "choose-category form-control" })
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->
                <!--/row-->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Purchase Date</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(x => x.PurchaseDate, new { type = "text", @class = "date-picker form-control" })
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Purchase Amount</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(x => x.PurchaseAmount, new { type = "number", @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Unit Of Price</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(x => x.UnitOfPrice, new { type = "number", @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Vendor</label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(x => x.VendorId, Enumerable.Empty<SelectListItem>(), new { @class = "choose-vendor form-control" })
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Asset Description</label>
                            <div class="col-md-9">
                                @Html.TextAreaFor(x => x.AssetDescription, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Assign To</label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(x => x.UsedBy, Enumerable.Empty<SelectListItem>(), new { @class = "assign-staff form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <h3 class="form-section">Asset Location</h3>
                <!--/row-->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Location Name</label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(x => x.LocationId, Enumerable.Empty<SelectListItem>(), new { id = "assetLocation", @class = "choose-location form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <!--/row-->
                <!--/row-->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Deparment</label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(x => x.DepartmentId, Enumerable.Empty<SelectListItem>(), new { @class = "choose-department form-control" })
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                    <!--/span-->
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn green">Submit</button>
                                <a href="@Url.Action("ViewAssetList","Home")" class="btn default"> Back To Asset List</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6"> </div>
                </div>
            </div>
        }
        <!-- END FORM-->
    </div>
</div>